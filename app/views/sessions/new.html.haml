- provide(:title, 'Sign in')
%h1 Sign in

%div.row
  %div.span6.offset3
    = form_for(:sessions, url: sessions_path) do |f|
      = f.label :email
      = f.email_field :email
      = f.label :password
      = f.password_field :password
      = f.submit "Sign in", class: "btn btn-primary btn-large"
